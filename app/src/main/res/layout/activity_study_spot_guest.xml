<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCE1"
    tools:context=".StudySpotGuestActivity">
     <TextView android:id="@+id/TitleTextGuest"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="StudyBuddy"
         android:textSize="30sp"
         android:textColor="#6A62B7"
         android:textStyle="bold"
         android:fontFamily="@font/miltoniantattooregular" />

     <LinearLayout
         android:layout_width="450dp"
         android:layout_height="770dp"
         android:layout_marginStart="25dp"
         android:layout_marginTop="100dp"
         android:layout_marginEnd="10dp"
         android:layout_marginBottom="10dp"
         android:background="@drawable/rounded_edges"
         android:backgroundTint="#DBE5FF"
         android:orientation="vertical"
         android:padding="10dp"></LinearLayout>
     <LinearLayout
         android:layout_width="450dp"
         android:layout_height="770dp"
         android:layout_marginStart="25dp"
         android:layout_marginTop="100dp"
         android:layout_marginEnd="10dp"
         android:layout_marginBottom="10dp"
         android:background="@drawable/rounded_edges"
         android:backgroundTint="#DBE5FF"
         android:orientation="vertical"
         android:padding="10dp">


     </LinearLayout>

     <LinearLayout
         android:layout_width="348dp"
         android:layout_height="194dp"
         android:layout_marginStart="50dp"
         android:layout_marginTop="70dp"
         android:layout_marginEnd="10dp"
         android:layout_marginBottom="10dp"
         android:background="@drawable/rounded_edges"
         android:backgroundTint="#D0CBFF"
         android:orientation="vertical"
         android:padding="10dp">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:cardCornerRadius="37dp">

               <ImageView
                   android:id="@+id/imageView"
                   android:layout_width="331dp"
                   android:layout_height="match_parent"
                   android:adjustViewBounds="true"
                   android:scaleType="fitXY"
                   app:srcCompat="@drawable/annenbergwallishall" />

          </androidx.cardview.widget.CardView>

     </LinearLayout>

     <LinearLayout
         android:layout_width="400dp"
         android:layout_height="140dp"
         android:layout_marginStart="50dp"
         android:layout_marginTop="190dp"
         android:layout_marginEnd="10dp"
         android:layout_marginBottom="10dp"
         android:background="@drawable/rounded_edges"
         android:backgroundTint="#8267B5"></LinearLayout>
     <TextView android:id="@+id/StudySpotName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:maxLines="1"
         app:autoSizeTextType="uniform"
         android:layout_marginStart="60dp"
         android:layout_marginTop="190dp"
         android:text=" Sample Study Spot"
         android:textSize="20dp"
         android:textColor="#C1FFFFFF"
         android:textStyle="bold"
         android:fontFamily="@font/mochiypoponeregular" />
     <TextView android:id="@+id/StudySpotRating"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:autoSizeTextType="uniform"
         android:layout_marginStart="60dp"
         android:layout_marginTop="220dp"
         android:text=" Sample Rating"
         android:textSize="15dp"
         android:textColor="#C1FFFFFF"
         android:fontFamily="@font/mochiypoponeregular" />
     <TextView android:id="@+id/StudySpotLocation"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:autoSizeTextType="uniform"
         android:layout_marginStart="60dp"
         android:layout_marginTop="245dp"
         android:text=" Sample Location"
         android:textSize="12dp"
         android:textColor="#C1FFFFFF"
         android:fontFamily="@font/mochiypoponeregular" />
     <TextView android:id="@+id/StudySpotTimesOpen"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:autoSizeTextType="uniform"
         android:layout_marginStart="60dp"
         android:layout_marginTop="265dp"
         android:text=" Sample Hours"
         android:textSize="12dp"
         android:textColor="#C1FFFFFF"
         android:fontFamily="@font/mochiypoponeregular" />

     <TextView android:id="@+id/SignInUpText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="350dp"
         android:layout_centerHorizontal="true"
         android:text=" Sign In/Up to rate and view reviews!"
         android:textSize="12dp"
         android:textColor="#8267B5"
         android:fontFamily="@font/mochiypoponeregular"></TextView>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginStart="200dp"
         android:layout_marginTop="390dp"
         android:layout_marginEnd="10dp"
         android:background="@drawable/dark_blue_oval"
         android:onClick="goToLoginPage"></LinearLayout>
     <TextView android:id="@+id/LoginButtonGuest"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginStart="50dp"
         android:layout_marginTop="395dp"
         android:backgroundTint="#699AFD"
         android:padding="8dp"
         android:onClick="goToLoginPage"
         android:text=" LogIn  "
         android:textSize="20dp"
         android:textColor="#FEFEFE"
         android:textAllCaps="true"
         android:fontFamily="@font/mochiypoponeregular"></TextView>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginStart="200dp"
         android:layout_marginTop="480dp"
         android:layout_marginEnd="10dp"
         android:background="@drawable/bright_blue_oval"
         android:backgroundTint="#69F4FD"
         android:onClick="goToLoginPage"></LinearLayout>
     <TextView android:id="@+id/SignUpButtonGuest"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="200dp"
         android:layout_marginTop="485dp"
         android:layout_centerHorizontal="true"
         android:padding="8dp"
         android:onClick="goToSignUpPage"
         android:text=" Sign Up  "
         android:textSize="20dp"
         android:textColor="#FEFEFE"
         android:textAllCaps="true"
         android:fontFamily="@font/mochiypoponeregular"></TextView>

     <Button
         android:id="@+id/login"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:backgroundTint="#ECEFC2"
         android:fontFamily="@font/mochiypoponeregular"
         android:padding="0dp"
         android:text="Login"
         android:textAllCaps="false"
         android:layout_marginLeft="305dp"
         android:textColor="#6A62B7"   />

     <Button
         android:id="@+id/mapBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="10dp"
         android:textColor="#ffffff"
         android:bottomRightRadius="10dp"
         android:bottomLeftRadius="10dp"
         android:topLeftRadius="10dp"
         android:topRightRadius="10dp"
         android:layout_marginTop="690dp"
         android:layout_marginLeft="330dp"
         android:text="Map" />
</RelativeLayout>