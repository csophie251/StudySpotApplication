<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCE1"
    tools:context=".LoginPageActivity">

    <TextView
        android:id="@+id/TitleTextLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:fontFamily="@font/miltoniantattooregular"
        android:text="StudyBuddy"
        android:textColor="#6A62B7"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="89dp" />

        <LinearLayout
            android:id="@+id/informationBlock"
            android:layout_width="1030px"
            android:layout_height="1000px"
            android:layout_marginLeft = "24px"
            android:layout_marginTop = "344px"
            android:background="@drawable/rounded_edges"
            android:backgroundTint="#D0CBFF"
            android:radius="111dp">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:fontFamily="@font/miltoniantattooregular"
                android:gravity="center"
                android:text="Welcome Back!"
                android:textColor="#FFFFFF"
                android:textSize="72px"
                android:textStyle="bold" />
        </LinearLayout>


    <TextView
        android:id="@+id/signuptitle"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="24px"
        android:layout_marginTop="200px"
        android:layout_marginEnd="84dp"
        android:fontFamily="@font/miltoniantattooregular"
        android:text="StuddyBuddy"
        android:textColor="#6A62B7"
        android:textSize="88px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/rounded_edges"
        android:backgroundTint="#87a4fe"
        android:ems="10"
        android:fontFamily="@font/mochiypoponeregular"
        android:hint="Enter email:"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="553dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="141dp"
        android:background="@drawable/rounded_edges"
        android:fontFamily="@font/mochiypoponeregular"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.159" />

    <EditText
        android:id="@+id/password"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="365dp"
        android:background="@drawable/rounded_edges"
        android:backgroundTint="#87a4fe"
        android:ems="10"
        android:fontFamily="@font/mochiypoponeregular"
        android:hint="Enter Password: "
        android:inputType="textPassword"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/continueAsGuest"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="94dp"
        android:fontFamily="@font/mochiypoponeregular"
        android:text="In a hurry? View as a guest."
        android:textColor="#3C79C1"
        android:textSize="15dp" />

    <!--</androidx.constraintlayout.widget.ConstraintLayout>-->
</RelativeLayout>

