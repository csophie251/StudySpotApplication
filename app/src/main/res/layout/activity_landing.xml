<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FCE1"
    tools:context=".StudySpotGuestActivity">

    <TextView
        android:id="@+id/TitleTextLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/miltoniantattooregular"
        android:text="StudyBuddy"
        android:textColor="#6A62B7"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/DescriptionLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp
"
        android:layout_centerHorizontal="true"
        android:text="For all your studying needs!"
        android:textSize="15dp"
        android:textColor="#3C79C1"
        android:fontFamily="@font/mochiypoponeregular"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/dark_blue_oval"
        android:onClick="goToLoginPage"/>
    <TextView android:id="@+id/LoginButtonLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="415dp"
        android:onClick="goToLoginPage"
        android:padding="8dp"
        android:text=" LogIn  "
        android:textSize="20dp"
        android:textColor="#FEFEFE"
        android:textAllCaps="true"
        android:fontFamily="@font/mochiypoponeregular"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bright_blue_oval"
        android:backgroundTint="#69F4FD"
        ></LinearLayout>
    <TextView android:id="@+id/SignUpButtonLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="495dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:onClick="goToSignUpPage"
        android:text=" Sign Up  "
        android:textSize="20dp"
        android:textColor="#FEFEFE"
        android:textAllCaps="true"
        android:fontFamily="@font/mochiypoponeregular"></TextView>

    <TextView android:id="@+id/InAHurryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_centerHorizontal="true"
        android:onClick="goToGuestMapPage"
        android:text="In a hurry? View as a guest."
        android:textSize="15dp"
        android:textColor="#3C79C1"
        android:fontFamily="@font/mochiypoponeregular"></TextView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="296dp"
        android:layout_height="275dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        app:srcCompat="@drawable/app_logo" />
</RelativeLayout>